// typo defaults
a:link, a:visited
    color: brand1
    text-decoration: none
p a:link,
p a:visited,
li a:link,
li a:visited
    text-decoration: underline

#navHeader a:link, #navHeader a:visited
    color: white

.activeLink
    font-weight: 600 !important

// custom typo
ul
    margin-bottom: 2em
    padding-left: 0
    width:95%

ul li
    font-size: 1.1em
    line-height: 1.2em
    margin-bottom: 0em
    list-style-type: none
    padding-bottom: 1.1em
    padding-top: 1em
    padding-right: 1em
    border-bottom: 1px solid brand2
ul li:last-child
    border-bottom: none
/*ul li:first-child
    padding-top: 0*/
ul.light li
    border-bottom: 1px solid whiteAlp50
ul p
    margin-bottom: 0
    margin-top: 0

.reverse ul
    border-top: 1px solid brand1
    border-bottom: 1px solid brand1
