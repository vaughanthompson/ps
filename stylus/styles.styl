// libs and default 3rd party
@import 'nib'
// setup
@import '../fonts/manrope/manropeCustom.css'

@require 'defaults.styl'
// block, nav etc
@require 'layout.styl'
// custom elements, icons
@require 'elements.styl'
// typography, links
@require 'typo.styl'
// typography, links
@import '../css/form.css'





/* effects */
.multiply
    background-blend-mode: multiply
.softlight
    background-blend-mode: soft-light
    /*background-color: blackAlp25*/
.bgoverlay0
    background-color: blackAlp10 !important
.bgoverlay1
    background-color: blackAlp25 !important
.bgoverlay2
    background-color: blackAlp50 !important
.bgoverlay3
    background-color: blackAlp75 !important

.multiplyBlack
    background-color: brand1
.multiplyRed
    background-color: brand2

.lighten1
    background-color: rgba(255,255,255,0.70)
    background-blend-mode: overlay
    filter:grayscale(80%)
.lighten2
    background-color: rgba(255,255,255,0.50)
    background-blend-mode: overlay
    filter:grayscale(80%)
.greyscale
    background-color: rgba(0,0,0,0.30)
    filter:grayscale(100%)
    transition: 1s
.greyscaleLt
    filter:grayscale(0%)
    transition: 2.5s


.burnColor
    background-blend-mode: color-burn
    opacity: 1.0
.gradient
    background-blend-mode: multiply
    background: linear-gradient(to bottom, brand2Alp50, blackAlp50) 
.gradient0
    background-blend-mode: multiply
    background: linear-gradient(to top, blackAlp5, rgba(255,255,255,0.0)) 
.gradient1
    background-blend-mode: multiply
    background: linear-gradient(to bottom, blackAlp5, rgba(255,255,255,0.0)) 
.gradient2
    background-blend-mode: multiply
    background: linear-gradient(to right bottom, black ,blackAlp50, blackAlp10)    
.gradient3
    background-blend-mode: multiply
    background: radial-gradient(circle at center, blackAlp5,blackAlp5,blackAlp5,blackAlp10, blackAlp25 )
.gradient4
    background-blend-mode: multiply
    background: linear-gradient(120deg, rgba(192,0,0,0.5),rgba(192,0,0,0.35), rgba(141,164,181,0.3), rgba(121,144,161,0.8))
.gradient5
    background-blend-mode: multiply
    background: linear-gradient(to top right, blackAlp90, blackAlp75 50%, blackAlp50)   
.gradient6
    background-blend-mode: multiply
    background: linear-gradient(to top, brand2Alp50, blackAlp50)   

.gradientsec2
    background-blend-mode: multiply
    background: linear-gradient(to top, blackAlp5, rgba(255,255,255,0.0) )
.gradientsec3
    background-blend-mode: multiply
    background: linear-gradient(to bottom, whiteAlp07, rgba(0,0,0,0.0) )
.gradientsec4
    background-blend-mode: multiply
    background: linear-gradient(120deg,sec4darker, blackAlp10, blackAlp5, blackAlp5 )
.gradientsec4-alt
    background-blend-mode: multiply
    background: linear-gradient(220deg,sec4darker, blackAlp10, blackAlp5, blackAlp5 )


.brand3 
    background-color: brand3
.brand4 
    background-color: brand4
.brand5 
    background-color: brand5
.brand6 
    background-color: brand6

.brand3 a.ctaButton
    color: brand3 !important
.brand4 a.ctaButton
    color: brand4 !important
.brand5 a.ctaButton
    color: brand5 !important
.brand6 a.ctaButton 
    color: brand6 !important


.blur
    filter:blur(10px)

.slick-prev,
.slick-next
    width:25px
    height: 25px
.slick-prev:before,
.slick-next:before
    font-size:25px
.slick-prev:before,
.slick-next:before,
.slick-dots li button:before
    color: white
    opacity: 1.0
.slick-dots li.slick-active button:before
    color: white
    opacity: 1.0
    font-size: 15px

// last in the cascade - highest prio
.m
    @media screen and (min-width: tBreakPoint)
        display: $hideItAll
.d
    @media screen and (max-width: tBreakPoint)
        display: $hideItAll

